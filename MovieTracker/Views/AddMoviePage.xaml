<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieTracker.AddMoviePage">

    <StackLayout Padding="20" Spacing="15" HorizontalOptions="Center">
        <Label 
            Text="Add a new movie to the movielist"
            FontSize="20"
            HorizontalOptions="Center" />
        <Entry Placeholder="Enter movie title"
            FontSize="18"
            Text="{Binding NewTitle, Mode=TwoWay}" />
        <Entry Placeholder="Enter movie genre"
               FontSize="18"
            Text="{Binding NewGenre, Mode=TwoWay}" />
        <Label 
            Text="Select Release Date:"
            FontSize="18" />
        <DatePicker
            Date="{Binding SelectedDate, Mode=TwoWay}"
            FontSize="18"/>
        <Label
            Text="Date cannot be in the future"
            FontSize="14" 
            IsVisible="{Binding IsDateInvalid}"
            TextColor="Red"/>
        <Picker Title="Select Rating"
            FontSize="18"
            ItemsSource="{Binding Ratings}"
            SelectedItem="{Binding SelectedRating, Mode=TwoWay}" />
        <Button Text="{Binding ButtonText}"
            FontSize="18"
            Command="{Binding AddMovieCommand}" />
        <Button Text="Cancel"
            FontSize="18"
            Command="{Binding CancelCommand}"
            IsVisible="{Binding Cancelable}"/>
    </StackLayout>
</ContentPage>