<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MovieTracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MovieTracker">

    <TabBar>
        <!-- Tabs at top for windows and at bottom for android, used for navigation -->
        <Tab Title="Movie List" Route="home">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Title="Add Movie" Route="Add">
            <ShellContent ContentTemplate="{DataTemplate local:AddMoviePage}" />
        </Tab>
    </TabBar>

</Shell>
